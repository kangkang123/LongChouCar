<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_exception" />
    
    <ImageView
        android:gravity="center_horizontal"
        android:id="@+id/iv_report"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="matrix"
        />
    <com.example.imagedemo.HackyViewPager
        android:visibility="gone"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black" />
    
    

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <!-- 外观: -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp" >

                <TextView
                    android:id="@+id/tv_my_integration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="外观:"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <RatingBar
                    android:id="@+id/rb_test_report_exterior"
                    style="@style/RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:numStars="5"
                    android:rating="3"
                    android:visibility="invisible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="#ff7500" />

            <ImageView
                android:id="@+id/iv_check_report_exterior"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/header_image1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_item" />

            <!-- 内饰: -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="内饰:"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <RatingBar
                    android:id="@+id/rb_test_report_trim"
                    style="@style/RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:numStars="5"
                    android:rating="3"
                    android:visibility="invisible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="#00d5ff" />

            <ImageView
                android:id="@+id/iv_check_report_trim"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/header_image1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_item" />

            <!-- 骨架: -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="骨架:"
                    android:textColor="#333333"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="#51c371" />

            <ImageView
                android:id="@+id/iv_check_report_bones"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/header_image1" />

            <!-- 编号 -->

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_item" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:weightSum="4" >

                <ImageView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#d6d6d6" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#f8f8f8"
                    android:gravity="center"
                    android:text="编号"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#d6d6d6" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#f8f8f8"
                    android:gravity="center"
                    android:text="检测项目"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#d6d6d6" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#f8f8f8"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="检测结果"
                        android:textColor="#666666"
                        android:textSize="12sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#d6d6d6" />
            </LinearLayout>

            <cn.longchou.wholesale.view.ListViewForScrollView
                android:id="@+id/lv_test_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#000000"
                android:dividerHeight="0dp" />

            <!-- 机械及电器 -->

            <LinearLayout
                android:id="@+id/ll_machinery_electrical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="6dp"
                    android:gravity="center_vertical"
                    android:text="机械及电器损伤"
                    android:textColor="#666666"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#0095b2" />

                <!-- 位置 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:weightSum="3" >

                    <ImageView
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="#d6d6d6" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#f8f8f8"
                        android:gravity="center"
                        android:text="位置"
                        android:textColor="#666666"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="#d6d6d6" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="#f8f8f8"
                        android:gravity="center"
                        android:text="检测结果"
                        android:textColor="#666666"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="#d6d6d6" />
                </LinearLayout>
            </LinearLayout>
            <!-- 摇窗机 -->

            <cn.longchou.wholesale.view.ListViewForScrollView
                android:id="@+id/lv_machine_electrical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#000000"
                android:dividerHeight="0dp" />

            <ImageView
                android:id="@+id/iv_machine_electric_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_item" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="6dp"
                    android:background="#f8f8f8"
                    android:gravity="center_vertical"
                    android:text="车辆故障"
                    android:textColor="#666666"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#ed6d00" />

                <TextView
                    android:id="@+id/tv_check_report_car_hurt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="6dp"
                    android:paddingTop="8dp"
                    android:textColor="#666666"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>