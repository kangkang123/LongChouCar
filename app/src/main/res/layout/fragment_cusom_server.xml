<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/title"
        layout="@layout/title_my" />

    <TextView
        android:id="@+id/tv_hot_question"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/title"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="热门问题"
        android:textColor="#999999"
        android:textSize="12sp" />

    <ListView
        android:id="@+id/lv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_hot_question"
        android:layout_marginBottom="50dp"
        android:divider="#00000000"
        android:dividerHeight="0dp" >
    </ListView>

    <cn.longchou.wholesale.view.ItemHelpCenter
        android:id="@+id/help_common_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="gone" />

    <cn.longchou.wholesale.view.ItemHelpCenter
        android:id="@+id/help_buycar_process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:visibility="gone" />

    <cn.longchou.wholesale.view.ItemHelpCenter
        android:id="@+id/help_apply_inventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="gone" />

    <cn.longchou.wholesale.view.ItemHelpCenter
        android:id="@+id/help_apply_kr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:visibility="gone" />

    <cn.longchou.wholesale.view.ItemHelpCenter
        android:id="@+id/help_apply_certification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="gone" />

    <cn.longchou.wholesale.view.ItemHelpCenter
        android:id="@+id/help_car_intruduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_custom_advice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ed6c01"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="意见反馈"
            android:textColor="#fff"
            android:textSize="15sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="#fff" />

        <TextView
            android:id="@+id/tv_custom_online"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ed6c01"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="在线咨询"
            android:textColor="#fff"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>