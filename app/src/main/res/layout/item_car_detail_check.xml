<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 检查报告 -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/ll_check_report_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#f0eff4"
            android:gravity="center_vertical"
            android:paddingLeft="20dp" >

            <TextView
                android:layout_width="5dp"
                android:layout_height="18dp"
                android:background="#ed6c01"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/tv_my_integration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="车况报告"
                android:textColor="#333333"
                android:textSize="15sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_car_detail_check_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="center_vertical"
                android:text="查看更多"
                android:textColor="#666666"
                android:textSize="12sp" />
        </LinearLayout>
        <!-- 外观 -->

        <ImageView
            android:layout_below="@+id/ll_check_report_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line_item" />

        <LinearLayout
            android:visibility="gone"
            android:layout_below="@+id/ll_check_report_title"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:weightSum="4" >

            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#d6d6d6" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#f8f8f8"
                android:gravity="center"
                android:text="外观  "
                android:textColor="#666666"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#d6d6d6" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="#ffffff"
                android:gravity="center" >

                <!-- style="?android:attr/ratingBarStyleSmall" -->

                <RatingBar
                    android:id="@+id/rb_car_detail_report_exterior"
                    style="@style/RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:numStars="5"
                    android:rating="3" />
            </LinearLayout>

            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#d6d6d6" />
        </LinearLayout>
        <!-- 内饰 -->

        

    </RelativeLayout>

    <ImageView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line_item" />

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:weightSum="4" >

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#d6d6d6" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f8f8f8"
            android:gravity="center"
            android:text="内饰"
            android:textColor="#666666"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#d6d6d6" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#ffffff"
            android:gravity="center" >

            <RatingBar
                android:id="@+id/rb_car_detail_report_trim"
                style="@style/RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:numStars="5"
                android:rating="3.5" />
        </LinearLayout>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#d6d6d6" />
    </LinearLayout>
    <!-- 发动机号 -->

    <ImageView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line_item" />

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:weightSum="4" >

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#d6d6d6" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f8f8f8"
            android:gravity="center"
            android:text="骨架 "
            android:textColor="#666666"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#d6d6d6" />

        <TextView
            android:id="@+id/tv_car_detail_bone_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#ffffff"
            android:gravity="center"
            android:text="点击查看详情"
            android:textColor="#3490e7"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#d6d6d6" />
    </LinearLayout>
    <!-- 机械及电器 -->

    <ImageView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line_item" />

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:weightSum="4" >

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#d6d6d6" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f8f8f8"
            android:gravity="center"
            android:text="机械及电器 损伤"
            android:textColor="#666666"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#d6d6d6" />

        <TextView
            android:id="@+id/tv_car_detail_machine_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#ffffff"
            android:gravity="center"
            android:text="点击查看详情"
            android:textColor="#3490e7"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#d6d6d6" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line_item" />

</LinearLayout>